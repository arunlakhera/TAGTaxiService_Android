<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_med"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_med"
        android:layout_marginEnd="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_booking"
            android:background="@drawable/green_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_Image"
                android:layout_width="@dimen/layout_width_default"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_med"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_DriverPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/driver_image"
                    android:src="@drawable/photo_default"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/textView_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_med"
                android:layout_marginEnd="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_TravelReturnDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/textView_PickupAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/textView_DropAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/textView_VehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/textView_Status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>